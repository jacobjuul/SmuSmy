
<div style="margin-top:30px;margin-bottom:30px">

  <h4 class="color-turquoise font-century-gothic letter-spacing">Forgot your password?</h4>

  <%#= devise_error_messages! %>
  <%= content_tag(:div, "Email - " + resource.errors.messages[:email].join(" "), :id => "email_error", :class => "font-century-gothic color-orange", :style => "margin-bottom:10px") if resource.errors.messages[:email] %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div>
      <%#= f.label :email %>
      <%= f.email_field( :email, {autofocus: true, class:"input round height-tiny font-century-gothic", placeholder:"Enter your email address"} ) %>
    </div>

    <div><%= f.submit( "Send me reset password instructions", {class:"button bg-color-turquoise font-century-gothic letter-spacing"} )%></div>
  <% end %>

  <%#= render "devise/shared/links" %>

</div>