<div class="row no-max-width bg-color-black-opaque-10" style="padding-top:3rem;padding-bottom:5rem">
	<div class="medium-5 large-4 large-offset-1 column">
		<h2 style="padding-left:25%;padding-top:10%;font-family:Didot;color:#FFFFFF;font-style:italic">Are you new?</h2>
		<span style="padding-left:30%;font-family:Didot;color:#FFFFFF;font-style:italic;display:inline-block;font-size:20px">
			Join us today to<br/>
			enjoy the <em style="color:#FF7BAC">LAUNCH OFFER</em>
		</span>
	</div>
	<div class="medium-7 large-5 column end" style="padding-left:10%;padding-right:10%">
	
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  

		  <div><%= f.label :email, {class:"font-century-gothic color-white"}  %>
		  <%= f.email_field :email, {autofocus: true, placeholder:"email@address.com", class:"height-small"} %></div>

			<br/>
		  
		  <div><%= f.label :password, {class:"font-century-gothic color-white"} %>
			<%= f.password_field :password, {autocomplete: "off", placeholder:"Use at least 8 characters.", class:"height-small"}%></div>

		  <div><%= f.label :password_confirmation, {class:"font-century-gothic color-white"} %>
			<%= f.password_field :password_confirmation, {autocomplete: "off", placeholder:"Re-enter password.", class:"height-small"} %></div>

			<%= devise_error_messages! %>
			
		  <div style="padding-top:3rem">
			<center>
			<%= f.submit "CREATE ACCOUNT", {class:"button font-century-gothic bold italic color-black bg-color-white letter-space"} %>
			</center>
		  </div>
		<% end %>
	
	</div>
</div>




