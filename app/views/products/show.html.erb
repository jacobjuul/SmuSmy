    <span style="padding-left:2rem">HOME / EARRINGS</span>
  </div>

  <div class="row no-max-width" style="padding:2%">
  
    <div class="large-5 column" style="padding:2%">
		<center>
			
				<%=link_to image_tag(@product.image_url), @product %>
			
		</center>
	</div>
	
	<div class="large-7 column" style="padding:2%">
		
		<div class="row">
			<div class="medium-8 column" style="padding:1%">
				<span class="font-century-schoolbook" style="font-style:italic;font-weight:800;font-size:2rem"><%= @product.title %></span>
				
				<div class="font-century-gothic" style="padding-top:4%;padding-left:10%">
					<p style="margin-bottom:0;"><%= @product.description %></p>
					
